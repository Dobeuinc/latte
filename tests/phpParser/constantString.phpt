// Constant string syntaxes

declare(strict_types=1);

use Tester\Assert;

require __DIR__ . '/../bootstrap.php';

$test = <<<'XX'
	'',
	"",
	'Hi',
	"Hi",
	'!\'!\\!\a!',
	"!\"!\\!\$!\n!\r!\t!\f!\v!\e!\a",
	"!\xFF!\377!\400!\0!",
